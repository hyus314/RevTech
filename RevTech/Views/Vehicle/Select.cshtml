@model ICollection<ManufacturerViewModel>;

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="~/css/select.css">
<script src="~/js/select.js"></script>
<div class="manufacturers-container">
    @foreach (var manufacturer in Model)
    {
        <img class="manufacturer_img" src="@manufacturer.ImageURL" alt="Manufacturer logo" onclick="getModelsByManufacturer(@manufacturer.Id)">
    }
</div>
<div id="modelsContainer"></div>

<div class="modal fade" id="enginesModal" tabindex="-1" aria-labelledby="enginesModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="enginesModalLabel">Engine Options</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="enginesContainer">
                <!-- Engines will be dynamically added here -->
            </div>
        </div>
    </div>
</div>