@model PaymentDetailsViewModel

<link rel="stylesheet" href="~/css/payment/payment.css">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3>Payment Details</h3>
                </div>
                <div class="card-body">
                    <form asp-action="ProcessPayment" method="post">
                        <div class="form-group">
                            <label>First Name</label>
                            <input type="text" asp-for="FirstName" class="form-control" readonly />
                        </div>
                        <div class="form-group">
                            <label>Last Name</label>
                            <input type="text" asp-for="LastName" class="form-control" readonly />
                        </div>
                        <div class="form-group">
                            <label>City</label>
                            <input type="text" asp-for="City" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label>Country</label>
                            <input type="text" asp-for="Country" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label>Address</label>
                            <input type="text" asp-for="Address" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label>Card Number</label>
                            <input type="text" asp-for="CardNumber" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label>Expiry Date</label>
                            <input type="text" asp-for="ExpiryDate" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label>CVC</label>
                            <input type="text" asp-for="CVC" class="form-control" required />
                        </div>
                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary btn-block">
                                Pay Now
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3>Ordered Parts</h3>
                </div>
                <div class="card-body">
                    <div id="orderedPartsList">
                    </div>
                    <div class="parts-amount">
                        <div class="total-label">Checkout Total:</div>
                        <div class="total-amount">$@Model.Amount</div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<script src="~/js/payment/payment.js"></script>
