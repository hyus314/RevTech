@model UserViewModel;
<link rel="stylesheet" href="~/css/configuration/chooseParts.css?v=2.0">
<link rel="stylesheet" href="~/css/responsive/chooseParts.css?v=2.0">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<h1 class="title">Configuration Creation</h1>
<div class="user-vehicle" id="user-vehicle">
    <h1 class="user-vehicle-title">Your Vehicle:</h1>
    <div class="vehicle-info">
        <div class="vehicle-details">
            <h2>@Model.CarModel.ManufacturerName</h2>
            <h3>@Model.CarModel.ModelName @Model.CarModel.Engine.Name</h3>
            <p>Horsepower: @Model.CarModel.Engine.HorsePower</p>
            <p>Torque: @Model.CarModel.Engine.Torque</p>
        </div>
        <div class="vehicle-image">
            <img src="@Model.CarModel.ImageURL">
        </div>
    </div>
</div>

<div class="line">
    <button id="find-parts-button" class="find-parts-button" onclick="loadAllParts(@Model.CarModel.Engine.Id, @Model.CarModelId)">Find Parts for Your Vehicle!</button>
    <button id="create-configuration-button" class="create-configuration-button" style="display: none;" data-carModel-id="@Model.CarModelId" data-engine-id="@Model.CarModel.Engine.Id" onclick="createConfiguration()">Create Configuration</button>
</div>

<div class="all-parts-container">
    <div class="part-container" id="turbo-container"></div>
    <div class="part-container" id="supercharger-container"></div>
    <div class="part-container" id="exhaustKit-container"></div>
    <div class="part-container" id="ecu-container"></div>
    <div class="part-container" id="tcu-container"></div>
    <div class="part-container" id="fuelPump-container"></div>
    <div class="part-container" id="injectorKit-container"></div>
    <div class="part-container" id="sparkPlug-container"></div>
    <div class="part-container" id="oilCooler-container"></div>
</div>

<button id="scrollToTopButton" class="scrollToTop-button">
    <img src="https://clipart-library.com/images/qTBoqqMBc.png" alt="Up Arrow" class="scrollToTop-arrow">
</button>

<script src="~/js/configuration/chooseParts.js?v=2.0"></script>